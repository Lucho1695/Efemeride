<div class="card">
  <div class="col-md-12 row">
    <div class="col-md-6">
      <h1>Show Category</h1>
    </div>
    <div class="col-md-6">
      <%= link_to 'Edit', edit_category_path(@category), class: 'btn btn-warning col-md-3' %> |
      <%= link_to 'Back', categories_path, class: 'btn btn-info col-md-3' %>
    </div>

  </div>
  <p id="notice"><%= notice %></p>

  <div class="form-group">
    <strong>Name:</strong>
    <%= @category.name %>
  </div>

  <div class="form-group">
    <strong>Active:</strong>
    <%= @category.active %>
  </div>

</div>
