<div class="card bg-light">
  <div class="col-md-12 row">
    <div class="col-md-6">
      <h1>Categories</h1>
    </div>
    <div class="col-md-6 text-center">
      <%= link_to 'New Category', new_category_path, class:"btn btn-success text-white" %>
    </div>
  </div>
  <p id="notice"><%= notice %></p>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Active</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.active %></td>
          <td><%= link_to 'Show', category, class: "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-warning" %></td>
          <td><%= link_to 'Activar/desactivar', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
